  <!-- Bg -->

  <% if @user.banner.attached? %>
    <div class="user-banner" style="
      background-image: url(<%=cloudinary_url(@user.banner.key)%>);">
      <div class="container">

              <div class="d-flex align-items-center">
              <% if @user.avatar.attached? %>
              <%= cl_image_tag @user.avatar.key, crop: :fill, class:'avatar-large border' %>
              <% end %>

              <h3 class="ml-2 mb-0 font-weight-bold mr-2 text-white"><%= "#{@user.first_name} #{@user.last_name}" %></h3>
              </div>

        </div>
    </div>
  <%end%>

  <!-- Content -->
  <div class="container">
    <div class="py-5 py-md-5">
      <div class="row">

        <div class="col-lg-3 col-md-4 col-12">

            <!-- Card -->
            <div class="card border-0 mb-4">
              <!-- Card body -->
              <div class="card-body">
                <h4>A propos de <%= @user.first_name %></h4>
                <p>
                  <%= @user.bio || "Cet utilisateur n'a pas encore de description" %>
                </p>

              </div>
            </div>

        </div>

        <div class="col-lg-9 col-md-8 col-12">
            <!-- Card -->

            <div class="card border-0">
              <!-- Card header -->

              <div class="card-header bg-white">
                <h4 class="mb-0">
                  Mes annonces (<%= @user.bike_ads.count %>)<span class="text-muted font-size-xs"></span>
                </h4>
              </div>

            </div>

            <div class="mt-4">
              <%= render 'components/bike_card', locals: { bike_ads: @bike_ads } %>
            </div>

        </div>
            
      </div>
    </div>
  </div>
