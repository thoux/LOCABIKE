  <!-- Bg -->

  <% if @user.banner.attached? %>
    <div class="user-banner" style="
      background-image: url(<%=cloudinary_url(@user.banner.key)%>);
    </div>
  <%end %>

  <!-- User info -->
  <div class="card p-lg-2 pt-2 pt-lg-0 rounded-0 border-0">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8 col-md-8 col-12">
          <div class="d-flex align-items-center">
            <div class="position-relative mt-n9">
              <img src="../assets/images/avatar-1.jpg" alt=""
                class="rounded-circle avatar-xxl border-white border-width-4 position-relative" >
              <a href="#!" class="position-absolute top-0 right-0 mr-2" data-toggle="tooltip" data-placement="top"
                title="Verified">
                <img src="../assets/images/checked-mark.svg" alt="" height="30" width="30" />
              </a>
            </div>
            <div class="ml-3">
              <div class="d-flex align-items-center">
                <h3 class="mb-0 font-weight-bold mr-2"><%= @user.first_name %></h3>
              </div>
              <span class="font-size-xs"><%= @user.last_name || "N'a pas encore remplie" %> </span>
                <% if @user.avatar.attached? %>
              <%= cl_image_tag @user.avatar.key, height: 50, width: 50, crop: :fill, class:'avatar' %> <% end %>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-12">
          <div class="font-size-md mt-4 mt-lg-0 pb-2 pb-lg-0 d-lg-flex justify-content-end">
            <a href="#!" class="mdi mdi-youtube text-muted mr-2"></a>
            <a href="#!" class="mdi mdi-link-variant text-muted mr-2"></a>
            <a href="#!" class="mdi mdi-instagram text-muted mr-2"></a>
            <a href="#!" class="mdi mdi-facebook text-muted mr-2"></a>
            <a href="#!" class="mdi mdi-twitter text-muted"></a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="container">
  <div class="py-5 py-md-5">
      <div class="row">
        <div class="col-lg-3 col-md-4 col-12">
          <!-- Card -->
          <div class="card border-0 mb-4">
            <!-- Card body -->
            <div class="card-body">
              <h4>A propos de <%= @user.first_name %></h4>
              <p>
                <%= @user.bio || "Cet utilisateur n'a pas encore de description" %>
              </p>
              <a href="#!" class="btn-link"> Read more</a>
            </div>
          </div>
          <!-- Card -->
          <div class="card border-0 mb-4 mb-lg-0">
            <!-- Card body -->
            <div class="card-body">
              <div class="d-flex align-items-center justify-content-between border-bottom pb-3 mb-3">
                <div>
                  <h4 class="mb-0 font-weight-bold">32</h4>
                  <p class="font-size-xs mb-0">Avis</p>
                </div>
                <div>
                  <span><i class="fe fe-file-text font-size-lg"></i></span>
                </div>
              </div>
              <div class="d-flex align-items-center justify-content-between pb-3">
                <div>
                  <p class="font-size-xs mb-0">Poser une question Ã  <%= @user.first_name %></p>
                </div>
                <div>
                  <span><i class="fe fe-users font-size-lg"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>


    </div>
    </div>
  </div>
