<div class="row">
  <div class="col-12 col-md-6 col-lg-4">
    <%= form_tag bike_ads_path, method: :get do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control mb-2",
    placeholder: "Trouver une moto disponible"
    %>

    <!-- <%= text_field_tag :city,
    params[:city],
    class: "form-control mb-2",
    placeholder: "Votre ville"
    %> -->
    <div class="col-12 col-md-6 col-lg-4 mb-4 mb-md-0 pl-0">
      <%= submit_tag "Rechercher une moto", class: "btn btn-primary ml-0" %>
    </div>
    <% end %>
  </div>
</div>
