<div class="row">
    <div class="col-12 col-lg-8" style="margin-top: 6rem; margin-bottom: 2.4rem;">
      <h1 class="my-0">Trouvez votre prochaine moto</h1>
      <% if @bike_ads.empty? %>
        <p class="mt-3"><i class="far fa-surprise"></i> Aucun résultat ne correspond à votre recherche.<br>Essayez de modifier vos critères.</p>
        <%= render "components/search_form" %>
      <% else %>
        <p><%= @bike_ads.size %> annonce<%= 's' if @bike_ads.size > 1 %> de location</p>
      <% end %>
      <%= render 'components/bike_card', locals: { bike_ads: @bike_ads } %>
    </div>

    <div class="col-12 col-lg-4">
      <div id="map" class="map-container"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
